<center>
    <div>
        <h3 class="titlename">Stories</h3>
    </div>
</center>
<div class="row">
    <div class="col s1 m1" onclick="location.href='?pageNo=1&size=5';"><a class="btn btn-circle" style="color:white;background-color:#333 !important;">1</a></div>
    <div class="col s1 m1" onclick="location.href='?pageNo=2&size=5';"><a class="btn btn-circle" style="color:white;background-color:#333 !important;">2</a></div>
    <div class="col s1 m1" onclick="location.href='?pageNo=1&size=5';"><a class="btn btn-circle" style="color:white;background-color:#777 !important;">First</a></div>
</div>
<div class="row">
    <div class="container">
        <div class="row">
            <div class="col s4 m4" style="totalstick">Total Post Count: {{total}}</div>
            <div class="col s4 m4">Current page: {{page}}</div>
            <div class="col s4 m4">Total Pages: {{pages}}</div>
        </div>
    </div>
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card card1 heartbeat" onclick="location.href='./stories/show/{{id}}';">
                <div class="card-image">
                    {{!-- {{#if user}}
                        {{{editIcon user.id ../user.id id}}}
                    {{/if}} --}}
                </div>
                <div class="card-content center-align">
                    <h5 class="storytitile">{{title}}</h5>
                    {{#if body}}
                    <p class="story-text">{{stripTags (truncate body 150)}}</p>
                    {{/if}}
                    {{#else}}
                    <div class="animated-background">
                    <div class="background-masker paragraph1-bottom"></div>
                    <div class="background-masker paragraph2-bottom"></div>
                    <div class="background-masker paragraph3-bottom"></div>
                    <div class="background-masker paragraph4-bottom"></div>
                    <div class="background-masker paragraph5-bottom"></div>
                    <div class="background-masker paragraph6-bottom"></div>"
                    </div>
                    {{/else}}
                    <br>
                    <div class="chip">
                        {{#if user.image}}
                        <img src="{{user.image}}" class="image-responsive"><a href="/stories/user/{{user.id}}" class="name-responsive"> {{user.firstName}} {{user.lastName}} </a>
                        {{/if}}
                        {{#else}}
                            <div class="background-masker image"></div>
                        {{/else}}
                    </div>
                    <div class="card-action canter-align">
                       {{!-- <div class="row">
                            <a class="btn grey" href="/stories/show/{{id}}"><i class="fa fa-bookmark"></i> Read More</a>
                       </div> --}}
                            <div class="row">
                                <div class="col s4">
                                    <a href="#" class="stateinfo" style="color:#888;height:46px;">
                                        <i class="material-icons text-grey text-left">remove_red_eye </i><small>{{viewcounting views}}</small>
                                    </a>
                                </div>
                                <div class="col s8">
                                   
                                         {{#if user}}
                                         {{{ratingIcon user.id ../user.id id}}} {{/if}}
                                         
                                        {{!-- <i class="material-icons text-grey text-left iconColor">
                                             star_border
                                        </i>
                                        <i class="material-icons text-grey text-left iconColor">
                                            star_border
                                        </i>
                                        <i class="material-icons text-grey text-left iconColor">
                                            star_border
                                        </i>
                                        <i class="material-icons text-grey text-left iconColor">
                                            star_border
                                        </i>
                                        <i class="material-icons text-grey text-left iconColor">
                                            star_border
                                        </i> --}}
                                </div>
                            </div>
                            
                    </div>
                </div>
            </div>
        </div>
    {{else}}
        <p>No Story Found</p>
        <div class="timeline-wrapper">
            <div class="timeline-item">
                <div class="animated-background">
                    <div class="background-masker image"></div>
                    <div class="background-masker header-bottom"></div>
                    <div class="background-masker paragraph1-bottom"></div>
                    <div class="background-masker paragraph2-bottom"></div>
                    <div class="background-masker paragraph3-bottom"></div>
                    <div class="background-masker paragraph4-bottom"></div>
                    <div class="background-masker paragraph5-bottom"></div>
                    <div class="background-masker paragraph6-bottom"></div>
                </div>
            </div>
        </div>
    {{/each}}
</div>