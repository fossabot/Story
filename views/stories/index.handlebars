<h1>Stories</h1>
<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{#if user}}
                        {{{editIcon user.id ../user.id id}}}
                    {{/if}}
                </div>
                <div class="card-content center-align">
                    <h5 style="color:black">{{title}}</h5>
                    <p class="story-text">{{stripTags (truncate body 150)}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}"><a href="/stories/user/{{user.id}}"> {{user.firstName}} {{user.lastName}} </a>
                    </div>
                    <div class="card-action canter-align">
                       <div class="row">
                            <a class="btn grey" href="/stories/show/{{id}}"><i class="fa fa-bookmark"></i> Read More</a>
                       </div>
                            <div class="row">
                                
                            </div>
                    </div>
                </div>
            </div>
        </div>
    {{else}}
        <p>No Story Found</p>
    {{/each}}
</div>