<div id="latest" class="section group" style="margin-top:2rem;">
    <center>
        <div>
            <h3 class="">Latest</h3>
        </div>
    </center>
    <div class="row">
        <ul class="pagination">
            <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
            <li class="waves-effect active selective"><a onclick="location.href='?page=1&size=6#popular';">1</a></li>
            <li class="waves-effect selective"><a onclick="location.href='?page=2&size=6#popular';">2</a></li>
            <li class="waves-effect selective"><a><i class="material-icons">chevron_right</i></a></li>
        </ul>
    </div>
    <div class="row">
        <div class="container">
            <div class="row">
                <div class="col s4 m4" style="totalstick">Total Post Count: {{totall}}</div>
                <div class="col s4 m4">Current page: {{pageno}}</div>
                <div class="col s4 m4">Total Pages: {{pagess}}</div>
            </div>
        </div>
        {{#each popular}}
        <div class="col s12 m4">
            <div class="card card1 heartbeat" onclick="location.href='./show/{{id}}';">
                <div class="card-image">
                    {{!-- {{#if user}} {{{editIcon user.id ../user.id id}}} {{/if}} --}}
                </div>
                <div class="card-content center-align">
                    <h5 class="storytitile">{{title}}</h5>
                    {{#if body}}
                    <p class="story-text">{{stripTags (truncate body 150)}}</p>
                    {{/if}} {{#else}}
                    <div class="animated-background">
                        <div class="background-masker paragraph1-bottom"></div>
                        <div class="background-masker paragraph2-bottom"></div>
                        <div class="background-masker paragraph3-bottom"></div>
                        <div class="background-masker paragraph4-bottom"></div>
                        <div class="background-masker paragraph5-bottom"></div>
                        <div class="background-masker paragraph6-bottom"></div>"
                    </div>
                    {{/else}}
                    <br>
                    <div class="chip">
                        {{#if user.image}}
                        <img src="{{user.image}}" class="image-responsive"><a href="/stories/user/{{user.id}}" class="name-responsive">
                            {{user.firstName}} {{user.lastName}} </a>
                        {{/if}} {{#else}}
                        <div class="background-masker image"></div>
                        {{/else}}
                    </div>
                    <div class="card-action canter-align">
                        {{!--
                        <div class="row">
                            <a class="btn grey" href="/stories/show/{{id}}"><i class="fa fa-bookmark"></i> Read More</a>
                        </div> --}}
                        <div class="row">
                            <div class="col s4">
                                <a href="#" class="stateinfo" style="color:#888;height:46px;">
                                    <i class="material-icons text-grey text-left">remove_red_eye </i><small>{{viewcounting
                                        views}}</small>
                                </a>
                            </div>
                            <div class="col s8">

                                {{#if user}} {{{ratingIcon user.id ../user.id id}}} {{/if}} {{!-- <i class="material-icons text-grey text-left iconColor">
                                    star_border
                                </i>
                                <i class="material-icons text-grey text-left iconColor">
                                    star_border
                                </i>
                                <i class="material-icons text-grey text-left iconColor">
                                    star_border
                                </i>
                                <i class="material-icons text-grey text-left iconColor">
                                    star_border
                                </i>
                                <i class="material-icons text-grey text-left iconColor">
                                    star_border
                                </i> --}}
                            </div>
                            <center>
                                <div class="col s12" style="border-radius:30px;">
                                    <p class=" animated-background1" style="padding:.3rem;color:white;background:darkslategrey;border-radius:30px;width:100%;.opacity:0.7">{{formateDate
                                        date 'MMMM Do YYYY'}}</p>
                                </div>
                            </center>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <p>No Story Found</p>
        <div class="timeline-wrapper">
            <div class="timeline-item">
                <div class="animated-background">
                    <div class="background-masker image"></div>
                    <div class="background-masker header-bottom"></div>
                    <div class="background-masker paragraph1-bottom"></div>
                    <div class="background-masker paragraph2-bottom"></div>
                    <div class="background-masker paragraph3-bottom"></div>
                    <div class="background-masker paragraph4-bottom"></div>
                    <div class="background-masker paragraph5-bottom"></div>
                    <div class="background-masker paragraph6-bottom"></div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>